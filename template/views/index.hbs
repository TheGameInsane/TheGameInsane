<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameInsane - Home</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="css/style.css">
    <link rel="shortcut icon" href="./images/GameInsane.png" type="image/png">
</head>
<body>
    <!-- Navbar -->
    {{>navbar}}

<!-- Main Header -->
<div class="row">
  <!-- Left -->
  <div class="col-md-6 col-12 main_header_left">
    <p>Welcome to TheGameInsane World</p>
    <h1>Get The <span style="color: rgb(97, 97, 255);">Latest</span> Games Made By Me</h1>
    <a href="/games"><button>Check Now</button></a>
    <a href="/games"></a>
  </div>
  <!-- Right -->
  <div class="col-md-6 col-12 main_header_right">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="w-100" src="images/GameInsane.png" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="w-100" src="images/GameInsane.png" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="w-100" src="images/GameInsane.png" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
</div>

<!-- Footer -->
{{>footer}}
</body>
</html>